<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6F4B5"
    tools:context=".ui.home.HomeFragment">

    <!-- Título o encabezado con fondo redondeado -->
<TextView
android:id="@+id/text_home"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="48dp"
android:layout_marginStart="24dp"
android:layout_marginEnd="24dp"
android:padding="20dp"
android:background="@drawable/rounded_background"
    android:text="Bienvenido a Senderos Seguros"
    android:textAlignment="center"
    android:textColor="#00796B"
    android:textSize="26sp"
    android:textStyle="bold"
    android:elevation="6dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5" />

    <!-- Descripción sin fondo adicional, directamente sobre el fondo verde claro -->
<TextView
android:id="@+id/text_description"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="24dp"
android:layout_marginStart="24dp"
android:layout_marginEnd="24dp"
android:padding="20dp"
android:text="Senderos Seguros te ayuda a navegar por tu ciudad de manera segura. Puedes reportar obstáculos en las rutas, como construcciones, caminos resbaladizos o bloqueos, y ver la información en un mapa interactivo. Además, tenes opciones para filtrar los reportes por tipo de obstáculo, ubicación y periodo de tiempo."
android:textAlignment="center"
android:textColor="#37474F"
android:textSize="24sp"
app:layout_constraintTop_toBottomOf="@+id/text_home"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
